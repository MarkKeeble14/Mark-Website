              if (x == 4) {
                x = 0;
                $('#divCountdownBar').addClass('timer-off-screen').removeClass('timer-on-screen');
              } else {
                initBarCount(timeToRead[x]);
              }
            
            $('#script-text-container').html(sentences[x]);
            $('#script-text-container').addClass('fade-in-up-start');
            $('#script-text-container').removeClass('fade-out-up');
          }, 300);
        } else {
            x++;

            // Reset 
            ResetBarCount();
            
            $('#script-text-container').html(sentences[x]);
            $('#script-text-container').addClass('fade-in-up-start');
            $('#script-text-container').removeClass('fade-out-up');
          }
      }

      $('#about-button').on('click', function() {
        $('#about-button').addClass('active-button');
        $('#languages-button').removeClass('active-button');
        $('#t-and-f-button').removeClass('active-button');
        
        if (x == 0) {
          AdvanceScript();
        }
      });

      function initBarCount(speed) {
        var divTimeLeft = document.getElementById('divTimeLeft');
        var divCountdownBar = document.getElementById('divCountdownBar');
        var startTimer = setInterval(barCount, speed);
        const fullWidth = divCountdownBar.style.width;

        $('#divCountdownBar').removeClass('timer-off-screen').addClass('timer-on-screen');
        function barCount() {
          if (!interrupted) {
            if (divTimeLeft.clientWidth < divCountdownBar.clientWidth) {
            divTimeLeft.style.width = divTimeLeft.clientWidth + 1 + "px";
            } else {
              divTimeLeft.style.width = divCountdownBar.clientWidth + "px";
              ResetBarCount();
            }
          }
        }

        function ResetBarCount() {
          clearInterval(startTimer);
          AdvanceScript();
          barAtZero = true;
          if (x != 3) {
            divTimeLeft.style.width = fullWidth;
          } else {
            $('#about-button').removeClass('active-button');
          }
        }
      }
    </script>
