    <script>
      document.addEventListener('keypress', logKey);

      var one = 101;
      var two = 100;
      var three = 105;
      var four = 116;
      var five = 13;

      var one_pressed;
      var two_pressed;
      var three_pressed;
      var four_pressed;
      var five_pressed;

      function logKey(event) {
        var key_pressed = event.keyCode;

        if (key_pressed == one) {
          one_pressed = true;

          setTimeout(ResetVariables, 2000);
        }

        if (one_pressed && key_pressed == two) {
          two_pressed = true;
        }

        if (two_pressed && key_pressed == three) {
          three_pressed = true;
        }

        if (three_pressed && key_pressed == four) {
          four_pressed = true;
        }

        if (four_pressed && key_pressed == five) {
          five_pressed = true;
          $('.hide-while-not-editing').removeClass('no-display');
          $('.hide-while-not-editing').addClass('block-display');
        }

        function ResetVariables() {
          if (!five_pressed) {
            one_pressed = false;
            two_pressed = false;
            three_pressed = false;
            four_pressed = false;
          }
        }
      }
    </script>
